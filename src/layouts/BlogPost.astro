---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'] & { headerNote?: any };

const { title, description, pubDate, updatedDate, heroImage, headerNote } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image {
				position: relative;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 16px;
				box-shadow: 0 10px 30px rgba(0,0,0,0.4), 0 0 60px rgba(35, 55, 255, 0.18);
			}
			.hero-image::after {
				content: "";
				position: absolute;
				inset: 0;
				border-radius: 16px;
				background: radial-gradient(500px 300px at 80% 10%, rgba(35, 55, 255, 0.12), transparent 60%),
					linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 100%);
				pointer-events: none;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1.25em 1.25em 0.5em 1.25em;
				color: rgb(var(--gray-light));
				background: rgba(255, 255, 255, 0.02);
				border: 1px solid rgba(var(--gray), 0.18);
				box-shadow: 0 10px 30px rgba(0,0,0,0.35), 0 0 40px rgba(35, 55, 255, 0.08);
				backdrop-filter: blur(10px);
				border-radius: 16px;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				background: linear-gradient(92deg, #8a2be2, var(--accent));
				-webkit-background-clip: text;
				background-clip: text;
				color: transparent;
				text-shadow: 0 0 24px rgba(35, 55, 255, 0.2);
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
				text-transform: uppercase;
				letter-spacing: 0.08em;
				display: inline-block;
				padding: 0.25em 0.65em;
				border: 1px solid rgba(var(--gray), 0.25);
				border-radius: 999px;
				background: rgba(255,255,255,0.02);
			}
			.last-updated-on {
				font-style: italic;
			}
			.title hr, .prose hr {
				border: none;
				height: 1px;
				background: linear-gradient(90deg, rgba(255,255,255,0), rgba(35,55,255,0.5), rgba(255,255,255,0));
				box-shadow: 0 0 24px rgba(35, 55, 255, 0.25);
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							{headerNote ? (
								headerNote
							) : (
								<>
									<FormattedDate date={pubDate} />
									{updatedDate && (
										<div class="last-updated-on">
											Last updated on <FormattedDate date={updatedDate} />
										</div>
									)}
								</>
							)}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
