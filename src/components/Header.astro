---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { ViewTransitions } from 'astro:transitions';
---

<ViewTransitions />
<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/bookings">Bookings</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://discord.com" target="_blank">
				<span class="sr-only">Open Discord</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M13.545 2.907a13.227 13.227 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.19 12.19 0 0 0-3.658 0 8.258 8.258 0 0 0-.412-.833.051.051 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.041.041 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032a.05.05 0 0 0 .019.033 13.276 13.276 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019c.308-.426.582-.875.818-1.346a.05.05 0 0 0-.01-.059.051.051 0 0 0-.018-.011 8.875 8.875 0 0 1-1.248-.595.05.05 0 0 1-.02-.066.051.051 0 0 1 .015-.019c.084-.063.168-.129.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.052.052 0 0 1 .053.007c.08.066.164.132.248.195a.051.051 0 0 1-.004.085 8.254 8.254 0 0 1-1.249.594.05.05 0 0 0-.03.03.052.052 0 0 0 .003.041c.24.47.515.92.817 1.346a.05.05 0 0 0 .056.019 13.235 13.235 0 0 0 4.001-2.02.05.05 0 0 0 .019-.033c.334-3.451-.559-6.449-2.366-9.106a.034.034 0 0 0-.02-.019Zm-8.198 7.307c-.789 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612Zm5.316 0c-.788 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612Z"
					></path></svg
				>
			</a>
			<a href="https://twitter.com/astrodotbuild" target="_blank">
				<span class="sr-only">Follow Astro on Twitter</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
					></path></svg
				>
			</a>
			<a href="https://www.youtube.com" target="_blank">
				<span class="sr-only">Open YouTube</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8.051 1.999h-.002C3.73 1.985.207 2.594.207 4.986v6.02c0 2.392 3.524 3 7.842 2.987 4.319.013 7.842-.595 7.842-2.987v-6.02c0-2.392-3.523-3.001-7.842-2.987Z"
					></path><path
						fill="rgb(var(--black))"
						d="M6.533 10.958V5.044l4.751 2.957-4.751 2.957Z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgba(10, 10, 14, 0.6);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(var(--gray), 0.18);
		box-shadow: 0 10px 30px rgba(0,0,0,0.35), 0 0 40px rgba(35, 55, 255, 0.08);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.75em;
		color: rgb(var(--gray-light));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: color 0.2s ease, text-shadow 0.2s ease, border-color 0.2s ease;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		text-shadow: 0 0 10px rgba(35, 55, 255, 0.5);
	}
	nav a:hover {
		border-bottom-color: var(--accent);
		text-shadow: 0 0 10px rgba(35, 55, 255, 0.5);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.internal-links { gap: 0.25rem; }
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
